<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LH_PET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LH_PET.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LH_PET</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="clientesDropdown" role="button"
                            data-bs-toggle="dropdown" arial-expanded="false">Clientes</a>
                            <ul class="dropdown-menu" aria-labelledy="clientesDropdown">
                                <li><a class="dropdown-item" asp-controller="DadosCliente" asp-action="Create">Cadastrar Cliente</a></li>
                                <li><a class="dropdown-item" asp-controller="DadosCliente" asp-action="Buscar">Consultar Cliente</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="fornecedoresDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">Fornecedores</a>
                            <ul class="dropdown-menu" aria-expanded="false">
                                <li><a class="dropdown-item" asp-controller="DadosFornecedor" asp-action="CreateFornecedor">Cadastrar Fornecedor</a></li>
                                <li><a class="dropdown-item" asp-controller="DadosFornecedor" asp-action="BuscarFornecedor">Consultar Fornecedor</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="produtosDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">Animais</a>
                            <ul class="dropdown-menu" aria-expanded="false">
                                <li><a class="dropdown-item" asp-controller="DadosAnimal" asp-action="CreateAnimal">Cadastrar Animal</a></li>
                                <li><a class="dropdown-item" asp-controller="DadosAnimal" asp-action="BuscarAnimal">Consultar Animal</a></li>
                            </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - LH_PET - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
