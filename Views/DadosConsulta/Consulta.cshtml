@model IEnumerable<LH_PET.Models.Consulta>
@{
    ViewData["Title"] = "Consultas Agendadas";
}

<h2 class="text-center mt-4">Consultas Agendadas</h2>

<table class="table table-striped table-bordered mt-4">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Animal</th>
            <th>Data e Hora</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var consulta in Model)
        {
            <tr>
                <td>@consulta.Cliente?.Nome</td>
                <td>@consulta.Animal?.Nome</td>
                <td>@consulta.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@consulta.Descricao</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Editar" asp-route-id="@consulta.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Excluir" asp-route-id="@consulta.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
